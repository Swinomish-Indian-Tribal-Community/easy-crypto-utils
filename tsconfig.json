{
  "compilerOptions": {
    "module": "nodeNext",
    "target": "ESNext",
    "moduleResolution": "nodeNext",
    "isolatedModules": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "tests"]
}
